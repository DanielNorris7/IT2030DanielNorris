@model IEnumerable<EventFinder.Models.Event>

<div id="searchresults">
    @if (Model.Count() == 0)
    {
        <p>No events found.</p>
    }
    <ol>
        @foreach (var item in Model)
        {
            <li>
                <strong>Event Title: </strong>@item.EventTitle,
                <strong>Event Type: </strong>@item.EventType.Type,
                <strong>Location: </strong>@item.Location

                <div>
                    @Html.ActionLink("Register for Event", "AddToCart", "ShoppingCart",
                        new { id = item.EventID },
                        new { @class = "btn btn-primary" })
                </div>
            </li>
        }
    </ol>
</div>